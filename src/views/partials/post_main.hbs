<main class="content__main">
  <section>
    <div class="content__container">
      <form class="postForm" method="POST" action="/submit">

        <label class="postForm__label" for="postTitle">Title
          <input class="postForm__input" name="title" id="postTitle" type="text"></input>
        </label>

        <label class="postForm__label" for="postImageURL">Image URL
          <input class="postForm__input" name="image_url"id="postImageURL" type="text"></input>
        </label>

        <label class="postForm__label" for="postBody">Post
          <textarea class="postForm__textarea" name="body_text" id="postBody" type="text"></textarea>
        </label>

        <button type="submit" class="postForm__button">Submit Your Story
        </button>

      </form>
    </div>
  </section>
</main>
